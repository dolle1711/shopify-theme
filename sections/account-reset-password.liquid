{% liquid
	assign email = email | default: ''
%}
{{ 'account.css' | asset_url | stylesheet_tag: preload: true }}
<div class="section color-{{- section.settings.color_scheme }}">
	<div class="ctnr">
		<div class="rw">
			<div class="clm m-auto" style="--w-xs:12;--w-sm:10;--w-md:6">
				<div class="s-header ta-center">
          <h2	tabindex="-1">{{ 'customer.reset_password.title' | t }}</h2>
          <div>{{ 'customer.reset_password.subtext' | t: email: email }}</div>
        </div>
				<div class="s-content">
					{%- form 'reset_customer_password', class: 'p-sides' -%}
						{%- if form.errors -%}
							<div class="d-flex middle-xs mb-32">
								<div class="icon icon--small icon--error">
									{% render 'icon-error', size: 16 %}
								</div>
								<div class="ml-8 flex-1">
									<h6>
										{{ 'templates.contact.form.error_heading' | t }}
									</h6>
									<ul class="mt-8 pl-12">
										{%- for field in form.errors -%}
											<li>
												{%- if field == 'form' -%}
													{{ form.errors.messages[field] }}
												{%- else -%}
													<a href="#field">
														{{ form.errors.translated_fields[field] | capitalize }}
														{{ form.errors.messages[field] }}
													</a>
												{%- endif -%}
											</li>
										{%- endfor -%}
									</ul>
								</div>
							</div>
						{%- endif -%}
						<div class="mb-24">
							<label for="password" class="field__label d-block mb-12">
								{{ 'customer.reset_password.password' | t }}<sup class="ml-4 color-danger">*</sup>
							</label>
							<input
								type="password"
								name="customer[password]"
								id="password"
								autocomplete="new-password"
								{% if form.errors contains 'password' %}
									aria-invalid="true"
									aria-describedby="password-error"
								{% endif %}
								placeholder="{{ 'customer.placeholder.password' | t }}"
								aria-required="true"
								required="required"
								class="field__text field--focus field--hover{% if form.errors contains 'password' %} field--error{% endif %} w-100"
							>
							{% if form.errors contains 'password' -%}
								<span class="d-block mt-8 color-danger">
									{{ form.errors.translated_fields['password'] | capitalize }} {{ form.errors.messages['password'] }}
								</span>
							{%- endif -%}
						</div>
						<div class="mb-32">
							<label for="password_confirmation" class="field__label d-block mb-12">
								{{ 'customer.reset_password.password_confirm' | t }}<sup class="ml-4 color-danger">*</sup>
							</label>
							<input
								type="password"
								name="customer[password_confirmation]"
								id="password_confirmation"
								autocomplete="new-password"
								{% if form.errors contains 'password_confirmation' %}
									aria-invalid="true"
									aria-describedby="password_confirmation-error"
								{% endif %}
								placeholder="{{ 'customer.placeholder.password' | t }}"
								aria-required="true"
								required="required"
								class="field__text field--focus field--hover{% if form.errors contains 'password_confirmation' %} field--error{% endif %} w-100"
							>
							{%- if form.errors contains 'password_confirmation' -%}
								<span class="d-block mt-8 color-danger">
									{{ form.errors.translated_fields['password_confirmation'] | capitalize }} {{ form.errors.messages['password_confirmation'] }}
								</span>
							{%- endif -%}
						</div>
						<div class="d-flex fd-column-reverse fd-row-sm center-xs mt-32">
							<button class="btn btn-large btn-primary">
								{{ 'customer.reset_password.button' | t }}
							</button>
						</div>
					{%- endform -%}
				</div>
			</div>
		</div>
	</div>
</div>
{% schema %}
{
  "name": "t:sections.account_reset_password.name",
  "settings": [
    {
      "type": "header",
      "content": "t:general.settings.headers.header_general.content"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:general.settings.color_scheme.label",
      "default": "scheme-1"
    }
  ]
}
{% endschema %}