        },
        {
          "value": "30",
          "label": "Slow"
        },
        {
          "value": "20",
          "label": "Normal"
        },
        {
          "value": "10",
          "label": "Fast"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "enable_play",
